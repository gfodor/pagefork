{
  "manifest_version": 2,

  "name": "Phork",
  "description": "Phork lets you take a copy of any web page, make small edits, and share those changes.",
  "version": "1.0",

  "permissions": [
    "pageCapture",
    "activeTab",
    "https://phork.io/phorks",
  ],

  "browser_action": {
    "default_icon": "fork_icon.png",
    "default_title": "Phork"
  },

  "background": {
    "scripts": ["jquery-2.0.3.min.js", "phork.js"],
    "persistent": false
  }
}
